<!DOCTYPE html>
<html>
  <head>
    <title>ShoppingApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="<%= controller.controller_name%>">
    <div id = "banner">
      <%= image_tag("banner.png") %>
      <%# <%= @page_title || "MLR Draft Prospects"%>
    </div>
    <div id = "columns">
      <div id = "sidebar">
        <% if @list != nil %>
          <%= render(@list)  %>
        <% end %>
        <%# </div> %>
        <%# <div id = "sidebar2">  %>
        <% if session[:user_id] %>
          <ul>
            <li><%= link_to 'Contacts', contacts_path %></li>
            <li><%= link_to 'Players', players_path %></li>
            <li><%= link_to 'Users', users_path %></li>
          </ul>
          <%= button_to 'Logout', logout_path, method: :destory%>
        <% end %>
      </div>
      <div id = "main_content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
